.row
	.col-md-8.col-md-offset-2
		.panel.panel-default
			.panel-heading
				= link_to raw("<span class=\"glyphicon glyphicon-chevron-left\"></span>"), app_page_path(@app, @page), class: "btn btn-default"
				#{@app.name} #{@page.name} #{@test.name} Test
			.panel-body
				= link_to("Start", start_app_page_test_path(@app, @page, @test), class: "btn btn-default btn-block")

			%ul.list-group
				=# render (@tests || "layouts/empty_list")